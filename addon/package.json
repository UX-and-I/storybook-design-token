{
  "name": "storybook-design-token",
  "version": "4.0.0",
  "description": "Storybook addon to display design token documentation generated from your stylesheets and icon files.",
  "keywords": [
    "design token",
    "design system",
    "design pattern",
    "storybook-addons"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/UX-and-I/storybook-design-token"
  },
  "author": "Philipp Siekmann <philippsiekmann@me.com>",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./manager": {
      "types": "./dist/manager.d.ts",
      "require": "./dist/manager.js",
      "import": "./dist/manager.mjs"
    },
    "./preview": {
      "types": "./dist/preview.d.ts",
      "require": "./dist/preview.js",
      "import": "./dist/preview.mjs"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "require": "./dist/preset.js",
      "import": "./dist/preset.mjs"
    },
    "./doc-blocks": {
      "types": "./dist/doc-blocks.d.ts",
      "require": "./dist/doc-blocks.js",
      "import": "./dist/doc-blocks.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "yarn clean",
    "build": "tsup & yarn build:preset",
    "build:watch": "tsup --watch",
    "build:preset": "tsup --config tsup.node.config.ts",
    "build:preset:watch": "tsup --config tsup.node.config.ts --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-p build:watch build:preset:watch 'storybook --quiet'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.0.8",
    "@storybook/react-vite": "^9.0.8",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.19.0",
    "@types/prettier": "^2.7.2",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "^4.5.1",
    "npm-run-all": "^4.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^3.0.2",
    "storybook": "^9.0.8",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vite": "^6.3.5",
    "zx": "^1.14.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "storybook": "^9.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "storybook": {
    "displayName": "Storybook Design Token",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "web-components",
      "ember",
      "html",
      "svelte",
      "preact"
    ],
    "icon": "https://raw.githubusercontent.com/UX-and-I/storybook-design-token/master/docs/teaser.png"
  },
  "dependencies": {
    "@storybook/icons": "^1.4.0",
    "@tanstack/react-virtual": "^3.13.9",
    "@uidotdev/usehooks": "^2.4.1",
    "glob": "^9.3.0",
    "jsdom": "^21.1.1",
    "polished": "^4.1.3",
    "postcss": "^8.3.11",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.8.5",
    "raw-loader": "^4.0.2"
  },
  "resolutions": {
    "jackspeak": "2.1.1"
  }
}
